extends layout/layout

block content
	.uk-flex.uk-flex-wrap.uk-padding(class="uk-child-width-1-1@s uk-child-width-1-2@m uk-child-width-1-3@l uk-child-width-1-4@xl" uk-height-match="target: > div > .uk-card")
		each p in parts
			.uk-padding-small
				.uk-card.uk-card-default.uk-card-body 
					h3.uk-card-title #{p.data.item.value}
					if p.data.datepurchased.value
						- var date = moment(new Date(p.data.datepurchased.value)).format('MMM Do YYYY')
						p Date Purchased: #{date}
					if p.data.costprice.value
						p Cost: Â£#{p.data.costprice.value}
					if p.data.other.value
						p From: #{p.data.other.value}
					else if p.data.ebay.value
						p From: Ebay
					else if p.data.amazon.value
						p From: Amazon
					a(href="/jobsheets/view/"+p.id) View Jobsheet