mixin sidenav(jobsheet)
	div(class="uk-width-1-4@m uk-visible@m")
		ul.uk-nav.uk-nav-default.uk-margin-large-top(uk-nav uk-sticky)
			li.uk-margin-small-top
				label.uk-form-label(for="staffassign")
					| Assign Staff
				select.uk-select
					option(value="None" name="staffassign")
						| None
			li.uk-margin-small-top
				label.uk-form-label(for="duedate")
					| Due Date
				input(type="date" name="duedate" value=date).uk-input
			li.uk-margin-small-top.uk-nav-center
				+savebutton(jobsheet)
			li.uk-margin-small-top.uk-nav-center
				p#savemessage.uk-invisible.uk-margin-remove-bottom.uk-padding-small
			li.uk-parent.uk-nav-header
				| Navigation
			ul.uk-nav-sub
				each section in layout
					li
						a(href="#"+section.title)
							| #{section.title}

mixin savebutton(jobsheet)
	if jobsheet != null
		button.save-button.uk-button.uk-button-primary
			| Update
	else
		button.save-button.uk-button.uk-button-primary
			| Save