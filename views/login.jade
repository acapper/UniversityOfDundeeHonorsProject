doctype html
html
	head
		title= title
		include layout/header
		script(src='/javascripts/login.js')
	body
		.uk-container
			.uk-grid-margin.uk-grid.uk-grid-stack(uk-grid='')
				div(class='uk-width-1-1@m')
					.uk-margin.uk-width-large.uk-margin-auto.uk-card.uk-card-default.uk-card-body.uk-box-shadow-large
						h3.uk-card-title.uk-text-center Login
						form#login(method="post")
							.uk-margin
								.uk-inline.uk-width-1-1
									span.uk-form-icon(uk-icon='icon: user')
									input.uk-input.uk-form-large(type='text' name="username" placeholder="Username" required)
							
							.uk-margin
								.uk-inline.uk-width-1-1
									span.uk-form-icon(uk-icon='icon: lock')
									input.uk-input.uk-form-large(type='password' name="password" placeholder="Password" required)
							
							.uk-margin
								input.uk-button.uk-button-primary.uk-button-large.uk-width-1-1(type="submit" name="submit" value="Login")
	

